import Layout from "../layouts/Layout.astro";
---

<Layout page="home" title="Daison.dev">
  <section id="body">
    <!-- <Hero /> -->
    <section
      class="flex flex-col justify-center gap-[30px] border-b-2
      border-[#242629] px-[30px] py-[50px] font-FiraCode text-white lg:flex-row
      lg:px-[100px] lg:py-[200px]"
    >
      <div class="lg:w-4/5">
        <h2 class="text-start text-[35px] md:text-[45px]">
          Hello World,<br /> I am Daison Thomas
        </h2>
        <p class="pt-[10px] text-[20px] md:text-[25px]">
          A Full Stack Developer with a focus on creating captivating user
          interfaces and robust backend solutions, dedicated to driving the
          success of web projects through a comprehensive approach to
          development.
        </p>
      </div>

      <div class="order-first lg:order-last">
        <img
          src="/daison_dp_3-removebg.png"
          class="aspect-[1/1] w-[200px] min-w-[100px] animate-blinkProfileBorder rounded-full border-0 border-[#242629] bg-[#0d0f14] bg-grid-pattern object-cover object-center transition-colors duration-[2s]"
        />
      </div>
    </section>
  </section>
</Layout>
